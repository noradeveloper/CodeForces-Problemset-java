import java.util.*;
public class Watermelon4A
{
	public static void main (String[] args) throws java.lang.Exception
	{
	   Scanner input =new Scanner(System.in);
       int w=input.nextInt();
       if(w > 2 && w % 2 == 0)
			System.out.println("YES");
	   else
			System.out.println("NO");
       
	}
}
